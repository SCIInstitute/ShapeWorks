{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake",
            "type": "shell",
            "options": {
                "cwd": "${workspaceRoot}/build"
            },
            "command": "cmake",
            "args": [
                "${workspaceRoot}",
                "-G",
                "\"MinGW Makefiles\""
            ],
            "problemMatcher": {
                "base" : "$gcc",
                "fileLocation" : "absolute"
            }
        },

        {
            "label": "build",
            "type": "shell",
            "problemMatcher": {
                "base" : "$gcc",
                "fileLocation" : "absolute"
            }

        }
    ]
}